{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}